import("//build/test.gni")

ohos_unittest("tel_core_service_gtest") {
  install_enable = true
  subsystem_name = "telephony"
  part_name = "core_service"
  test_module = "tel_core_service_gtest"
  module_out_path = part_name + "/" + test_module

  sources = [
    "//base/telephony/core_service/interfaces/innerkits/proxy/core_service_proxy.cpp",
    "//base/telephony/core_service/interfaces/kits/src/i_network_search_callback_stub.cpp",
    "network_search_test.cpp",
    "network_search_test_callback_stub.cpp",
    "sim_test.cpp",
  ]

  include_dirs = [
    "//base/telephony/core_service/common/log/include",
    "//base/telephony/core_service/interfaces/innerkits/proxy",
    "//base/telephony/core_service/interfaces/innerkits/common",
    "//base/telephony/core_service/interfaces/innerkits/sms_mms",
    "//base/telephony/core_service/interfaces/innerkits/network_search",
    "//base/telephony/core_service/interfaces/kits/include",
    "//base/telephony/core_service/frameworks/native/include",
    "//base/telephony/core_service/common/sim",
    "//base/telephony/core_service/common/network_search",
    "//base/telephony/core_service/common/core",
    "//base/telephony/ril_adapter/interfaces/innerkits",
    "//utils/native/base/include",
  ]

  deps = [
    "//base/telephony/core_service:tel_core_service",
    "//base/telephony/ril_adapter/hril:hril",
    "//third_party/googletest:gtest_main",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "appexecfwk_standard:libeventhandler",
    "ces_standard:cesfwk_innerkits",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr_L2:samgr_proxy",
  ]

  defines = [ "TELEPHONY_LOG_TAG = \"CoreServiceGtest\"" ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":tel_core_service_gtest" ]
}
